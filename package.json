    "gsap": "^3.12.5",
    "isomorphic-dompurify": "^2.34.0",
    "lucide-react": "^0.445.0",
    "next": "^15.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "recharts": "^2.12.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^20.0.0",
