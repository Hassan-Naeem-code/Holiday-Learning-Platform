  "private": true,
  "scripts": {
    "dev": "npm run lint:check && next dev",
    "build": "npm run lint && npm run type-check && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:check": "next lint --max-warnings=0 || echo 'ESLint warnings found. Starting dev server...'",
