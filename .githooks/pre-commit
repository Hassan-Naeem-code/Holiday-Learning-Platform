#!/bin/sh

# Pre-commit hook: Run linting and type checking before commit

echo "ğŸ” Running pre-commit checks..."

# Run ESLint
echo "ğŸ“ Checking ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint check failed. Please fix errors before committing."
  exit 1
fi

# Run TypeScript type check
echo "ğŸ”· Checking TypeScript..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript check failed. Please fix errors before committing."
  exit 1
fi

echo "âœ… Pre-commit checks passed!"
exit 0
